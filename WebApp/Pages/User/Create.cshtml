@page
@model WebApp.Pages.User.CreateModel
@{}

<h2>Add New User</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissble fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@if (Model.succesMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissble fade show" role="alert">
        <strong>@Model.succesMessage</strong>
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}


<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Product Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="product_name" value="@Model.user.product_name" required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price </label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="list_price" step="0.01" value="@Model.user.list_price?.ToString("F2")" required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Year </label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="model_year" step="0.01" value="@Model.user.model_year" required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Brand Id </label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="brand_id" step="0.01" value="@Model.user.brand_id" required />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-6 col-sm-3 g-grid">
            <button type="submit" class="btn btn-primary">Submit</button> &nbsp;
            <button type="submit" class="btn btn-danger">Cancel</button>
        </div>
    </div>
</form>